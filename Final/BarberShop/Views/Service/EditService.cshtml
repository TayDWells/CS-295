@model BarberShop.Models.Service

@{
    ViewData["Title"] = "Edit Service";
}

<h1>Edit Service</h1>

<form asp-controller="Service" asp-action="EditService" method="post">
    <input type="hidden" asp-for="ServiceId" />

    <div>
        <label for="SName">Service Name:</label>
        <input type="text" id="SName" name="SName" asp-for="SName" required />
    </div>
    <div>
        <label for="Time">Time:</label>
        <input type="number" id="Time" name="Time" asp-for="Time" required />
    </div>
    <div>
        <label for="Cost">Cost:</label>
        <input type="number" id="Cost" name="Cost" asp-for="Cost" required />
    </div>
    <div>
        <button type="submit">Update Service</button>
    </div>
</form>
