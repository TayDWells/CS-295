@model BarberShop.Models.Client

@{
    ViewData["Title"] = "Edit Client";
}

<h1>Edit Client</h1>

<form asp-controller="Client" asp-action="EditClient" method="post">
    <input type="hidden" asp-for="ClientId" />

    <div>
        <label for="Name">Name:</label>
        <input type="text" id="Name" name="Name" asp-for="Name" required />
    </div>
    <div>
        <label for="Pronouns">Pronouns:</label>
        <input type="text" id="Pronouns" name="Pronouns" asp-for="Pronouns" />
    </div>
    <div>
        <label for="Number">Number:</label>
        <input type="text" id="Number" name="Number" asp-for="Number" />
    </div>
    <div>
        <button type="submit">Update Client</button>
    </div>
</form>
